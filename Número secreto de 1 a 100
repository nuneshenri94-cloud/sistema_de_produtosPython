print("Tente adivinhar o número Secreto!")
import random
numero_secreto = random.randint(1,100)
num = 0
vidas = 10

while num != numero_secreto and vidas > 0:
  num = int(input("Tente adivinhar o número secreto! : "))
  
  if num > numero_secreto:
    print("O número secreto é menor que {}".format(num))
    vidas -= 1
  elif num < numero_secreto:
    print("O número secreto é maior que {}".format(num))
    vidas -= 1
  elif num == numero_secreto:
    print("Parabéns, você acertou! Você ficou com {}".format(vidas))
if vidas == 0:
  print("Fim de jogo, você ficou sem vidas, o número secreto era {}".format(numero_secreto))